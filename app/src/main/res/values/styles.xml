<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FFB70D</item>
    </style>

    <!--Vertical Linear Layout each player-->

    <style name="LinearLayoutPlayer">
        <item name="android:layout_marginTop">@dimen/top</item>


    </style>


    <!--Score-->
    <style name="Score">
        <item name="android:textSize">@dimen/score_textSize</item>
        <item name="android:textColor">@color/score</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/score_padding</item>
        <item name="android:fontFamily">sans-serif_light</item>
        <item name="android:layout_marginTop">@dimen/topBottomScore</item>
        <item name="android:layout_marginBottom">@dimen/topBottomScore</item>
        <item name="android:text">@string/score</item>


    </style>


    <!--Score Landscape-->
    <style name="ScoreLandscape">
        <item name="android:textSize">@dimen/score_textSizeLandscape</item>
        <item name="android:textColor">@color/score</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/score_paddingLandscape</item>
        <item name="android:fontFamily">sans-serif_light</item>
        <item name="android:layout_marginTop">@dimen/topBottomScoreLandscape</item>
        <item name="android:layout_marginBottom">@dimen/topBottomScoreLandscape</item>
        <item name="android:text">@string/score</item>


    </style>

    <!--EditText-->

    <style name="teamText">
        <item name="android:textColor">@color/playerName</item>
        <item name="android:textSize">@dimen/editTextLandscape</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/editText_paddingLandscape</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>

    </style>

    <!--EditText Landscape-->

    <style name="teamTextLandscape">
        <item name="android:textColor">@color/playerName</item>
        <item name="android:textSize">@dimen/editText</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/editText_padding</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>

    </style>

    <!--Button +20-->
<style name="buttonTwenty">
    <item name="android:text">@string/twenty_points</item>
    <item name="android:layout_margin">@dimen/marginButton</item>

</style>

    <!--Button +10-->
    <style name="buttonTen">
        <item name="android:text">@string/ten_points</item>
        <item name="android:layout_margin">@dimen/marginButton</item>

    </style>


    <!--Button +5-->
    <style name="buttonFive">
        <item name="android:text">@string/five_points</item>
        <item name="android:layout_margin">@dimen/marginButton</item>

    </style>



    <!--Button +20 Landscape-->
    <style name="buttonTwentyLandscape">
        <item name="android:text">@string/twenty_points</item>
        <item name="android:layout_margin">@dimen/marginButton</item>

    </style>

    <!--Button +10 Landscape-->
    <style name="buttonTenLandscape">
        <item name="android:text">@string/ten_points</item>
        <item name="android:layout_margin">@dimen/marginButton</item>

    </style>


    <!--Button +5 Landscape-->
    <style name="buttonFiveLandscape">
        <item name="android:text">@string/five_points</item>
        <item name="android:layout_margin">@dimen/marginButton</item>

    </style>




    <!--Button Reset-->
    <style name="buttonReset">
        <item name="android:text">@string/reset</item>
        <item name="android:layout_margin">@dimen/marginResetButton</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>


    </style>

    <!--View-->
    <style name="View">
        <item name="android:layout_marginTop">@dimen/marginTopView</item>
        <item name="android:background">@android:color/darker_gray</item>

    </style>

</resources>
